{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clippy",
  "version": "0.1.0",
  "identifier": "com.tjs.clippy",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "clippy",
        "width": 300,
        "height": 600,
        "transparent": true,
        "resizable": false,
        "minimizable": false,
        "maximizable": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": {
          "x": -100,
          "y": -100
        },
        "visible": false
      },
    {
        "label": "settings",
        "title": "Clippy Settings",
        "url": "/settings",
        "width": 400,
        "height": 450,
        "transparent": true,
        "resizable": false,
        "minimizable": true,
        "maximizable": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "decorations": true,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
